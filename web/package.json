{
  "name": "jnl",
  "version": "1.0.0",
  "description": "Pragmatic journelling webapp",
  "main": "index.js",
  "scripts": {
    "start": "cross-env API_URL=https://api.stage.jnlapp.io/ webpack serve --mode=development --open --hot",
    "build-prod": "cross-env API_URL=https://api.app.jnlapp.io/ webpack --mode=production",
    "build-stage": "cross-env API_URL=https://api.stage.jnlapp.io/ webpack --mode=production",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odrusso/jnl.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/odrusso/jnl/issues"
  },
  "homepage": "https://github.com/odrusso/jnl#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest-axe": "^3.5.2",
    "@types/react": "^17.0.17",
    "@types/react-bootstrap": "^0.32.26",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "jest": "^27.0.6",
    "jest-axe": "^5.0.1",
    "msw": "^0.34.0",
    "node-fetch": "^2.6.1",
    "source-map-loader": "^3.0.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "babel-loader": "^8.2.2",
    "bootstrap": "^4.6.0",
    "css-loader": "6.5.1",
    "html-webpack-plugin": "^4.5.1",
    "lodash": "^4.17.20",
    "randomcolor": "^0.6.2",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-bootstrap-icons": "^1.8.4",
    "react-dom": "^17.0.1",
    "style-loader": "3.3.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "globals": {
      "localStorage": true,
      "document": true,
      "fetch": true,
      "console": true,
      "__dirname": true,
      "test": true,
      "describe": true,
      "expect": true,
      "jest": true
    },
    "rules": {
      "react/prop-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ],
    "testMatch": [
      "**/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
